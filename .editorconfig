# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 79

[*.{js,py}]
indent_size = 4

[*.rb]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_size = 2
