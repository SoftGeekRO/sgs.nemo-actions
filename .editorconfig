# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
max_line_length = 80

[*.{js,py}]
indent_style = tab
indent_size = 2

[*.rb]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
